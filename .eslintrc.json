{
  "env": {
    "browser": true,
    "es2021": true,
    "node": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-var": ["error"],
    "no-console": ["off"],
    "prefer-const": ["error"],
    "prefer-template": ["warn"],
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }]
  }
} 